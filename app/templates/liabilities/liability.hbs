<div class="detail-form">
  {{#link-to "liabilities" class="button"}}
    Hide details
  {{/link-to}}

  {{#bs-form formLayout="horizontal" action="submit"}}
    {{bs-form-element controlType="text" label="id" placeholder="id"
        value=model.id disabled="true"}}
    {{bs-form-element controlType="text" label="Name" placeholder="name"
        value=model.enterprise.name}}
    {{bs-form-element controlType="text" label="Amount" placeholder="amount"
        value=model.amount}}
    {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
  {{/bs-form}}

  {{outlet}}

</div>
