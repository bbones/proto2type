<div class="detail-form">
  {{#link-to "parties" class="button"}}
    Hide details
  {{/link-to}}

  {{#bs-form formLayout="horizontal" action="submit"}}
    {{bs-form-element controlType="text" label="id" placeholder="id"
        value=model.id disabled="true"}}
    {{bs-form-element controlType="text" label="Name" placeholder="name"
        value=model.name}}
  {{/bs-form}}
  {{bs-button defaultText="Submit" type="primary"
    buttonType="submit" action="submit"}}
  {{bs-button defaultText="Delete" type="primary" buttonType="delete"
    action="delete"}}

  {{outlet}}

</div>
