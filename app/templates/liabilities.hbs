<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Liabilities</h3>
  </div>
  <div class="panel-body">
		<table class="table" id="liabilList">
			<tr>
				<th>Id</th>
				<th>Party</th>
				<th>Amount</th>
				<th>Actions</th>

			</tr>
		  {{#each model.liabilities as |liability|}}
		  <tr>
				<td style="text-align:right">{{liability.id}}</td>
				<td>{{liability.enterprise.name}}</td>
		    <td style="text-align:right">{{liability.amount}}</td>
				<td>
						<button type="button" name="button"
							{{action "deleteLiab" liability}}>x</button>
				</td>
		  </tr>
		  {{/each}}
		</table>
  </div>
</div>



<div class="panel panel-primary">
	<button {{action "newLiability"}}
		type="button" class="btn btn-primary">New liability</button>
		{{#if isNewLiab}}
		  <div class="body">
				<input type="date">
		  </div>
		{{/if}}
</div>
