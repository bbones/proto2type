<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Liabilities</div>
  <div class="panel-body">
    <p>Liabilities describes relation with other party</p>
  </div>

  <!-- Table -->
  <table class="table" id="liabilList">
    <tr>
      <th>Id</th>
      <th>Party</th>
      <th>Amount</th>
      <th>Actions</th>

    </tr>
    {{#each model.liabilities as |liability|}}
    <tr>
      <td style="text-align:right">{{liability.id}}</td>
      <td>{{liability.enterprise.name}}</td>
      <td style="text-align:right">{{format-number liability.amount format="0,0.00"}}</td>
      <td>
          <button type="button"
               {{action "deleteLiab" liability}}>x</button>
          <button type="button"
               {{action "editLiab" liability}}>Edit</button>
      </td>
    </tr>
    {{/each}}
  </table>
</div>

<div class="panel panel-primary">
	<button {{action "newLiability"}}
		type="button" class="btn btn-primary">New liability</button>
	{{#if isNewLiab}}
    {{liability-editor liability=liabToEdit}}
  {{/if}}
</div>
