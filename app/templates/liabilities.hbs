<h2>Liabilities</h2>

<table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Unit</th>
        <th>Party</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
			{{#each model as |liability|}}
      <tr>
        <td style="text-align:right">{{liability.id}}</td>
        <td>
          {{#link-to "liabilities.liability" liability}}
            {{liability.unit.name}}
          {{/link-to}}
        </td>
        <td>
          {{#link-to "liabilities.liability" liability}}
            {{liability.party.name}}
          {{/link-to}}
        </td>
        <td style="text-align:right">{{ember-inline-edit value=liability.amount format="0,0.00"}}</td>
      </tr>
			{{/each}}
    </tbody>
</table>

{{outlet}}
