<h2>Balance</h2>


<table id="balance">
	<tr>
		<th>Assets</th>
		<th>=</th>
		<th>Equity</th>
		<th>+</th>
		<th>Liability</th>
		<th></th>
	</tr>
	<tr>
		<td>100</td>
		<td/>
		<td>10</td>
		<td/>
		<td>80</td>
		<td><button {{action "changeBalanceDetail"}}> + </button></td>
	</tr>
	
	{{#if balanceDetails}}
	
	<tr>
		<td>50</td>
		<td/>
		<td>20</td>
		<td/>
		<td>10</td>
		<td></td>
	</tr>

	{{/if}}
</table>

<h2>Account list <button {{action "changeAccountList"}}> + </button></h2> 
{{#if accountList}}
<table id="accountList">
	<tr>
		<th>Account</th>
		<th>Description</th>
		<th>Current amount</th>
	</tr>
</table>
{{/if}}